<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <AutoCompleteTextView
                android:id="@+id/account"
                android:layout_width="500dp"
                android:layout_height="80dp"
                android:background="#e8e7e7"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="25"
                android:inputType="text"
                android:hint="请输入账号"
                android:textSize="32dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="500dp"
                android:layout_height="85dp"
                android:background="#e8e7e7"
                android:maxLines="1"
                android:maxLength="18"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:textSize="32dp"
                android:layout_below="@id/account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>
            <CheckBox
                android:id="@+id/checkbox_Remember"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:maxLines="1"
                android:scaleX="1.50"
                android:scaleY="1.50"
                android:text="记住密码"
                android:textSize="18sp"
                android:layout_alignLeft="@id/password"
                android:layout_below="@id/password"/>
            <CheckBox
                android:id="@+id/checkbox_Automatic"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"
                android:maxLines="1"
                android:scaleX="1.50"
                android:scaleY="1.50"
                android:text="自动登录"
                android:textSize="18sp"
                android:layout_toRightOf="@id/checkbox_Remember"
                android:layout_below="@id/password"/>
            <Button
                android:id="@+id/btn_loginPage"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="380dp"
                android:padding="15dp"
                android:text="登   录"
                android:textSize="30sp"
                android:layout_below="@id/checkbox_Remember"
                android:layout_marginTop="60dp"/>
            <Button
                android:id="@+id/btn_registered"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="注   册"
                android:textSize="30sp"
                android:layout_below="@id/checkbox_Remember"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/btn_loginPage"/>
        </RelativeLayout>
</RelativeLayout>