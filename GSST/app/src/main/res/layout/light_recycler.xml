<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/light_text_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="28dp"
            android:background="@drawable/style_text_border"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/light_text_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="28dp"
            android:background="@drawable/style_text_border"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/light_text_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="28dp"
            android:background="@drawable/style_text_border"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/light_text_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="28dp"
            android:background="@drawable/style_text_border"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="@drawable/style_text_border"
            android:gravity="center">

            <CheckBox
                android:id="@+id/RV_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="2.00"
                android:scaleY="2.00"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:background="@drawable/style_text_border"
            android:gravity="center">

            <Button
                android:id="@+id/RV_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:background="#e8f5d2"
                android:text="@string/setting"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>